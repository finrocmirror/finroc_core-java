<targets>

  <finrocjavalibrary name="core" libs="rrlib_finroc_core_utils.jar">
    <sources exclude="org/finroc/core/test/** org/finroc/core/finstructable/Finstructed.java">
      **.java
    </sources>
  </finrocjavalibrary>

  <javatestprogram name="tests" libs="finroc_core.jar finroc_plugin_blackboard.jar finroc_plugin_tcp.jar">
    <sources>
      org/finroc/core/test/*.java
    </sources>
    <script name="realports" main-class="org.finroc.core.test.RealPortTest5"/>
    <script name="queuedports" main-class="org.finroc.core.test.RealPortQueueTest"/>
    <script name="tcp2server" main-class="org.finroc.core.test.RealServerTest"/>
    <script name="tcp2client" main-class="org.finroc.core.test.RealClientTest"/>
    <script name="initial_pushing" main-class="org.finroc.core.test.InitialPushTest"/>
    <script name="p2p" main-class="org.finroc.core.test.Peer2PeerTest"/>
    <script name="basic_realtime" main-class="org.finroc.core.test.BasicRealtimeTest"/>
  </javatestprogram>
  
  <javaprogram name="jfinstructed" libs="finroc_core.jar finroc_plugin_tcp.jar">
    <sources>
      org/finroc/core/finstructable/Finstructed.java
    </sources>
  </javaprogram>
</targets>