    <script name="realports_java" main-class="org.finroc.core.test.RealPortTest5"/>
    <script name="queuedports_java" main-class="org.finroc.core.test.RealPortQueueTest"/>
    <script name="tcp2server_java" main-class="org.finroc.core.test.RealServerTest"/>
    <script name="tcp2client_java" main-class="org.finroc.core.test.RealClientTest"/>
    <script name="initial_pushing_java" main-class="org.finroc.core.test.InitialPushTest"/>
    <script name="p2p_java" main-class="org.finroc.core.test.Peer2PeerTest"/>
    <script name="basic_realtime_java" main-class="org.finroc.core.test.BasicRealtimeTest"/>
  </javatestprogram>
  
  <finrocjavaprogram name="finstructed_java" libs="finroc_core.jar finroc_plugin_tcp.jar finroc_structure_elements.jar" main-class="org.finroc.core.finstructable.Finstructed">
    <sources>
      org/finroc/core/finstructable/Finstructed.java
    </sources>
  </finrocjavaprogram>
